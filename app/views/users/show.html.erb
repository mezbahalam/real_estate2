
<h2><%= link_to "#{@user.email}'s Profile", @user %></h2>
<% if user_signed_in? %>
    <div id="follow_user">
      <%= render :partial => "shared/follow_user", :locals => {:user => @user} %>
    </div>
<% end %>
<div class="well">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div><img src="#">pro pic</div>
    </div>
      <div class="col-md-5">
        <div><%= "#{@user.first_name}" + " " + "#{@user.last_name }"%></div>
        <div><%= @user.user_name %> </div>
        <div><%= @user.location %> </div>
        <div><%= @user.bio %> </div>

      </div>
    <% if is_current_user?(@user) %>
        <div class="col-md-2">
          <%= link_to 'Edit Profile', edit_user_registration_path , class: "btn btn-primary" %>
        </div>
    <% end %>
    </div>
  </div>
</div>
</div>




<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">

      <h1>Latest Activities</h1>

      <% @activities.each do |activity| %>
          <div class="activity">
            <% activity.inspect %>
            <div class="bg-primary" style="padding: 5px">
              <%= link_to(activity.owner.email, activity.owner  , class: "activity-color" ) if activity.owner%>
              <p class= "activity-color"><%= render_activity activity  %></p>
            </div>

          </div>
      <% end %>
    </div>

  </div>
</div>
<div class="well">
<h3>My property</h3>

<table>
  <tbody>
  <% @properties.each do |property| %>
      <tr>

        <td><%= property.street_address %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.url %></td>
        <td><%= property.photo_url %></td>
        <td><%= property.description %></td>
        <td><%= property.tags %></td>
        <td><%= property.bedroom %></td>
        <td><%= property.bathroom %></td>
        <td><%= property.price %></td>
        <td><%= property.status %></td>
        <td><%=  link_to "show", property_path(:id => property.id) %></td>

      </tr>


  <% end %>
  </tbody>
</table>
</div>
<br>
<h1>My Lists</h1>
<div class="row">
  <div class="col-md-4">
    <% @lists.each do |list| %>


        <div class="bg-primary" style="padding: 10px"> <%= link_to  list.name, list_path(list) , class:  "bg-primary" %> </div>
        <div class="bg-info">
          <%=  link_to "show", list_path(:id => list.id) %>
          <% if current_user.id == list.owner_id %>
              <%= link_to 'Edit', edit_list_path(list) %>
              <%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
        <br>

    <% end %>
  </div>
</div>


<p id="notice"><%= notice %></p>


<%= form_for @invite , :url => invites_path do |f| %>
    <%= f.hidden_field :list_id, :value => @invite.list_id %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit 'Send Invite', class: 'btn-primary' %>
<% end %>

<% if @properties.present? %>

<h1>All Properties</h1>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type = "text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>

<% end %>
<table>


  <tbody>
    <% @list.properties.each do |property| %>
      <tr>

        <td><%= property.street_address %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.url %></td>
        <td><%= property.photo_url %></td>
        <td><%= property.description %></td>
        <td><%= property.tags %></td>
        <td><%= property.bedroom %></td>
        <td><%= property.bathroom %></td>
        <td><%= property.price %></td>
        <td><%= property.status %></td>
        <td><%=  link_to "show", property_path(:id => property.id) %></td>
        <% if current_user.id == @list.owner_id %>
            <td><%=  link_to "Edit", edit_list_property_path(:id => property.id) %></td>
            <td><%=  link_to "Delete", list_property_path(:id => property.id) ,method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>

      </tr>


  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', list_path(@list) %>
<%= link_to 'New Property', new_list_property_path %>





<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="well">
  <div class="container-fluid">
    <div class="row" style="margin-left: 2.5%">

      <div class="row" style="margin-left: 30%; margin-right: 30%">
        <%= form_tag lists_path ,:method => :get do %>
            <div class="row">
              <%= text_field_tag :search, params[:search], :autocomplete => 'on',style: "width: 60%" %>
              <%= submit_tag "search", class: "btn btn-info" %>
            </div>
        <% end %>
      </div>

      <br>
      <br>
      <br>
      <div class="row">
        <div class="col-md-2" >
          <% if current_user.id == @property.owner_id %>
              <%= link_to 'Edit', edit_property_path(  :id => @property.id), class: "btn btn-primary custom-button" %>
          <% end %>
          <br><br><br>
          <div style="width: 80%">
            <h5>My lists</h5>
            <%= form_for(@property, url: add_to_list_property_path,  :method => :POST) do |f| %>
                <%= f.collection_check_boxes(:list_ids, @current_user_lists, :id, :name) %>
                <%= f.submit  "Add to list", class: "btn btn-primary custom-button" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-9">
          <div class="row">
            <h4><%=   @property.street_address %> </h4>
            <div class="col-lg-4">
              <p>
                <% if @property.photo_url_url().present? %>
                    <%= image_tag @property.photo_url_url().to_s %>
                <% else %>
                    <%= image_tag "plogo.jpg" %>
                <% end %>
              </p>
            </div>

            <div class="col-md-5"  style="margin-left: 10px">
              <% if @property.present? %>
                  <div style='width: 400px;'>
                    <div id="map" style='width: 400px; height: 400px;'></div>
                  </div>

                  <script type = "text/javascript">
                      handler = Gmaps.build('Google');
                      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
                          markers = handler.addMarkers(<%=raw @hash.to_json %>);
                          handler.bounds.extendWith(markers);
                          handler.fitMapToBounds();
                          handler.getMap().setZoom(14);
                      });
                  </script>
              <% end %>
            </div>
          </div>

          <div class="row">
            <p>
              <strong>Url:</strong>
              <%= link_to "#{@property.url}", @property.url %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @property.description %>
            </p>

            <p>
              <strong>Bedroom:</strong>
              <%= @property.bedroom %>
            </p>

            <p>
              <strong>Bathroom:</strong>
              <%= @property.bathroom %>
            </p>

            <p>
              <strong>Price:</strong>
              <%= @property.price %>
            </p>

            <p>
              <strong>Status:</strong>
              <%= @property.status %>
            </p>

            <p>
              <strong>Tags:</strong>
              <%= @property.tags %>
            </p>

          </div>
          <p >
            <%= render 'shared/actions', resource: @property %>
            <span class="like-count"><%= pluralize(@property.cached_votes_up, 'like') %></span>
          </p>
        </div>
        <%# link_to 'Back', "#" %>
      </div>
    </div>
  </div>
<br><br>
<br><br>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-5 ">


        <div class="comments">
          <h2>Comments</h2>
          <%= render :partial => 'comments/form', :locals => { :comment => @new_comment } %>
          <%= render :partial => 'comments/comment', :collection => @comments, :as => :comment %>
        </div>
      </div>
    </div>
  </div>
</div>
